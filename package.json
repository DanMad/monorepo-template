{
  "name": "monorepo-starter",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "build": "yarn remove:dist && lerna exec -- yarn build",
    "build:css": "yarn build:css:node-sass && yarn build:css:postcss",
    "build:css:node-sass": "lerna exec -- node-sass src/scss/style.scss dist/css/style.css --output-style compressed",
    "build:css:postcss": "lerna exec -- postcss dist/css/style.css --no-map --replace --use autoprefixer",
    "build:js": "lerna exec -- babel --root-mode upward src --ignore \"**/*.test.js\",\"**/*.test.jsx\" --out-dir dist",
    "remove:dist": "lerna exec -- rimraf dist",
    "remove:node_modules": "lerna exec -- rimraf node_modules",
    "sort-packages": "sort-package-json && lerna exec -- sort-package-json",
    "test": "jest",
    "test:coverage": "jest --coverage --colors",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write",
    "packages/**/*.+(js|jsx)": [
      "eslint . --fix"
    ],
    "packages/**/*.scss": [
      "stylelint --syntax scss --fix"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@babel/eslint-parser": "^7.13.10",
    "@babel/eslint-plugin": "^7.13.10",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-react": "^7.12.10",
    "autoprefixer": "^10.2.4",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.0.1",
    "eslint": "^7.20.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "postcss": "^8.2.6",
    "postcss-loader": "^5.0.0",
    "prettier": "^2.2.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "sass": "^1.32.2",
    "sass-loader": "^11.0.1",
    "sort-package-json": "^1.46.1",
    "style-loader": "^2.0.0",
    "stylelint": "^13.10.0",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "webpack": "^5.24.4",
    "webpack-cli": "^4.4.0",
    "webpack-dev-server": "^3.11.2"
  },
  "engines": {
    "node": "12.19.0"
  }
}
