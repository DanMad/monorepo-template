{
  "name": "root",
  "private": true,
  "description": "Your monorepo description",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "yarn install",
    "postbootstrap": "lerna bootstrap --use-workspaces && lerna link --force-local && husky install && chmod +x .husky/*",
    "build": "lerna exec -- yarn build",
    "unstrap": "lerna exec -- rm -rf dist node_modules yarn-error.log && rm -rf node_modules yarn-error.log"
  },
  "devDependencies": {
    "@lerna/link": "^6.0.3",
    "copy-webpack-plugin": "^11.0.0",
    "husky": "^8.0.2",
    "lerna": "^6.0.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "sort-package-json": "^2.1.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.8.0"
  }
}
